@model IJsonSerializable
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.tmpl.min.js")" type="text/javascript"></script>
    @if (Model != null)
    {
    <script type="text/javascript">
        var model = @Model.ToJson();
        $(document).ready(function () {
            $('#template').tmpl(model).appendTo('#placeholder');
        });
    </script>
    }
</head>

<body>
    <ul class="breadcrumbs">
    <li>You are here: <a href="@Url.Content("~/")">ISIS</a></li>
    <li class="separator">\</li>
    <li><a href="@Url.Content("~/Schedule")">Course Scheduling</a></li>
    @if (ViewData.ContainsKey("Breadcrumbs"))
    {
        foreach (var crumb in (IEnumerable<ISIS.Web.Models.Breadcrumb>) ViewData["Breadcrumbs"])
        {
            <li class="separator">\</li>
            @crumb
        }
    }
    <li class="separator">\</li>
    <li>@ViewBag.Title</li>
    </ul>
    @RenderBody()
</body>
</html>
